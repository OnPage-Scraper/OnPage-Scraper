{
  "manifest_version": 3,
  "name": "OnPage.dev - Web Scraper",
  "version": "1.0.0",
  "description": "Professional web scraping tool with element selection and data export capabilities",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://onpage.dev/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OnPage.dev Scraper",
    "default_icon": {
      "16": "icons/OnPage.png",
      "32": "icons/OnPage.png",
      "48": "icons/OnPage.png",
      "128": "icons/OnPage.png"
    }
  },
  "options_page": "reports.html",
  "icons": {
    "16": "icons/OnPage.png",
    "32": "icons/OnPage.png",
    "48": "icons/OnPage.png",
    "128": "icons/OnPage.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
